---
import '@fontsource-variable/onest';

interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/new-portfolio/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-zinc-100 dark:bg-zinc-900 text-black dark:text-white">
	<Header lang='ca'></Header>
	<main class="px-3 lg:px-4">
		<section id="top" class='section pt-12 md:pt-20 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl'>
			<slot/>
		</section>
	</main>
	<Footer/>
	</body>

</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
	}

	h1 {
		@apply text-black dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex-col gap-x-4
	}

	h2 {
		@apply font-normal py-2.5 text-xl text-gray-600 dark:text-white pt-8
	}

	h2 {
		@apply font-normal py-2.5 text-lg text-gray-600 dark:text-white pt-8
	}

	p {
		@apply pt-6
	} 

	li {
		list-style: circle;
	}

	ul, ol {
		@apply pl-4
	}
</style>
