---
import {getHome, getExperience, getProjects, getFooterText} from "../utils/translate.ts"
type Language = 'en' | 'es' | 'ca';
---
<footer class="bg-white rounded-lg shadow m-4 mt-14 dark:bg-gray-800">
    <div class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">{getFooterText(Astro.props.lang as Language)}</span>
    <ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0">
        <li>
            <a href="#top" class="hover:underline me-4 md:me-6">{getHome(Astro.props.lang as Language)}</a>
        </li>
        <li>
            <a href="#experiencia" class="hover:underline me-4 md:me-6">{getExperience(Astro.props.lang as Language)}</a>
        </li>
        <li>
            <a href="#proyectos" class="hover:underline me-4 md:me-6">{getProjects(Astro.props.lang as Language)}</a>
        </li>
    </ul>
    </div>
</footer>
